<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<xs:schema version="1.0" xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <xs:element name="caesarAlgorithm" type="caesarAlgorithm"/>

  <xs:element name="doubleAlgorithm" type="doubleAlgorithm"/>

  <xs:element name="multiplicationAlgorithm" type="multiplicationAlgorithm"/>

  <xs:element name="reverseAlgorithm" type="reverseAlgorithm"/>

  <xs:element name="singleAlgorithm" type="singleAlgorithm"/>

  <xs:element name="splitAlgorithms" type="splitAlgorithms"/>

  <xs:element name="xorAlgorithm" type="xorAlgorithm"/>

  <xs:complexType name="doubleAlgorithm">
    <xs:sequence>
      <xs:element name="algorithms" minOccurs="0">
        <xs:complexType>
          <xs:sequence>
            <xs:any processContents="lax" minOccurs="2" maxOccurs="2"/>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="reverseAlgorithm">
    <xs:sequence>
      <xs:any processContents="skip" />
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="splitAlgorithms">
    <xs:sequence>
      <xs:any processContents="skip" />
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="caesarAlgorithm">
    <xs:complexContent>
      <xs:extension base="singleAlgorithm">
        <xs:sequence/>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="singleAlgorithm">
    <xs:sequence/>
  </xs:complexType>

  <xs:complexType name="multiplicationAlgorithm">
    <xs:complexContent>
      <xs:extension base="singleAlgorithm">
        <xs:sequence/>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="xorAlgorithm">
    <xs:complexContent>
      <xs:extension base="singleAlgorithm">
        <xs:sequence/>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>
</xs:schema>

